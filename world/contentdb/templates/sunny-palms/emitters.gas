[t:template,n:emt_sound_crickets_nightly]
{
	specializes		= emitter_lightweight;

	// show green arrow to distinguish from glowworm emitters
	[gizmo]
	{
		model				=	m_i_glb_object-waypoint;
		texture				=	;
		diffuse_color		=	0.0, 1, 0.0;
		use_diffuse_color	=	true;
	}

	[sound_emitter]
	{
		event_sound = "amb_crickets";
	  f max_repeat_rate = 12;
	  f repeat_rate = 10;
	  i start_hour = 20;
	  i stop_hour = 1;
	}
}
